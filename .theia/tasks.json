{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm-install-on-start",
            "type": "shell",
            "command": "npm",
            "args": ["install", "--include=dev"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
        }
    ]
}
